/* pages/aboutMe/aboutMe.wxss */
page{
  background-color: #EDEDED;
}
.profile {
  width: 100%;
  height: 20vh;
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: center;
  border-bottom: 10px solid #EEECED;
}

.userinfo {
  position: relative;
  width: 750rpx;
  height: 320rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
 
.userinfo-avatar {
  overflow:hidden;
  display: block;
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  margin-right: 50rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}
.userinfo-avatar-image{
  width: 100%; 
  height: 100%;
  /* border-radius: 50%; */
}

.userinfo-text{
  font-size: x-large;
}

.detail {
  width: 50%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: stretch;
}
.name {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 50rpx;
}
.tologin{
  background-color: white;
  font-size: x-large;
}